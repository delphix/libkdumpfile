@rootpgt: PGT
  target_as=MACHPHYSADDR
  root=KPHYSADDR:0x8208e000
  pte_mask=0x0
  pte_format=riscv64
  fields=12,9,9,9,9

@machphys_kphys: LINEAR
  target_as=KPHYSADDR
  off=0x0

@kphys_machphys: LINEAR
  target_as=MACHPHYSADDR
  off=0x0

